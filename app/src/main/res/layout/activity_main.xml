<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/EditText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#EFE7E7"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="50sp"></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp"
        >

        <Button
            android:id="@+id/AcBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#FF9800"
            android:elevation="15dp"
            android:text="AC"
            android:onClick="acevent"
            android:textSize="22sp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/PlusMinusBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#FF9800"
            android:elevation="15dp"
            android:text="+/-"
            android:onClick="DigitClickEvent"
            android:textSize="22sp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/DivideBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#FF9800"
            android:elevation="15dp"
            android:onClick="OperatorClickEvent"
            android:text="/"
            android:textSize="22sp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/MultiplyBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF9800"
            android:elevation="15dp"
            android:onClick="OperatorClickEvent"
            android:text="*"
            android:textSize="22sp"
            android:textStyle="bold"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/SevenBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#D8D8D7"
            android:elevation="15dp"
            android:onClick="DigitClickEvent"
            android:text="7"
            android:textSize="18sp"></Button>

        <Button
            android:id="@+id/EightBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#D8D8D7"
            android:elevation="15dp"
            android:onClick="DigitClickEvent"
            android:text="8"
            android:textSize="18sp"></Button>

        <Button
            android:id="@+id/NineBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#D8D8D7"
            android:elevation="15dp"
            android:onClick="DigitClickEvent"
            android:text="9"
            android:textSize="18sp"></Button>

        <Button
            android:id="@+id/PercentageBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF9800"
            android:elevation="15dp"
            android:text="%"
            android:onClick="percentageevent"
            android:textSize="22sp"
            android:textStyle="bold"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/FourBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#D8D8D7"
            android:elevation="15dp"
            android:onClick="DigitClickEvent"
            android:text="4"
            android:textSize="18sp"></Button>

        <Button
            android:id="@+id/FiveBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#D8D8D7"
            android:elevation="15dp"
            android:onClick="DigitClickEvent"
            android:text="5"
            android:textSize="18sp"></Button>

        <Button
            android:id="@+id/SixBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#D8D8D7"
            android:elevation="15dp"
            android:onClick="DigitClickEvent"
            android:text="6"
            android:textSize="18sp"></Button>

        <Button
            android:id="@+id/PlusBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF9800"
            android:elevation="15dp"
            android:onClick="OperatorClickEvent"
            android:text="+"
            android:textSize="22sp"
            android:textStyle="bold"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/OneBtn"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#D8D8D7"
            android:elevation="15dp"
            android:onClick="DigitClickEvent"
            android:text="1"
            android:textSize="18sp"></Button>

        <Button
            android:id="@+id/TwoBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#D8D8D7"
            android:elevation="15dp"
            android:onClick="DigitClickEvent"
            android:text="2"
            android:textSize="18sp"></Button>

        <Button
            android:id="@+id/ThreeBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="#D8D8D7"
            android:elevation="15dp"
            android:onClick="DigitClickEvent"
            android:text="3"
            android:textSize="18sp"></Button>

        <Button
            android:id="@+id/MinusBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF9800"
            android:elevation="15dp"
            android:onClick="OperatorClickEvent"
            android:text="-"
            android:textSize="22sp"
            android:textStyle="bold"></Button>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ZeroBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="#D8D8D7"
                android:elevation="15dp"
                android:onClick="DigitClickEvent"
                android:text="0"
                android:textSize="18sp"></Button>

            <Button
                android:id="@+id/DotBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="#D8D8D7"
                android:elevation="15dp"
                android:onClick="DigitClickEvent"
                android:text="."
                android:textSize="18sp"></Button>

            <Button
                android:id="@+id/EqualTwoBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#D8D8D7"
                android:onClick="equalevent"
                android:elevation="15dp"
                android:text="="
                android:textSize="18sp"></Button>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>